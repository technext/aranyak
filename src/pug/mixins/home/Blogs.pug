mixin Blog({imgSrc, type, requiredTime, title, description, link})
    .blog-card
        .position-relative.mb-3.mb-md-14.mb-lg-mb-13 
            img(src=`${CWD}assets/img/blogs/${imgSrc}`, alt="").img-fluid
            .inner-div 
                p.fw-semi-bold.lh-normal.mb-0= type  
        
        span(style="color: #5C5C5C;").lh-normal.mb-0= requiredTime 
        h2.text-success.fw-semi-bold.lh-normal.text-capitalize.mb-4.mb-md-13.mb-lg-18.blog-title= title
        p.text-cardText.fs-9.fs-md-8.fw-light.lh-xl.mb-25= description
        a(href=`${link}`).text-success.fw-bold.lh-normal.fs-9.fs-md-8.mb-0 read more...
        


