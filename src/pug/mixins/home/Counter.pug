mixin Counter 
    section.pb-9.pb-lg-10 
        .row.gap-4.gap-lg-0
            .col-12.col-lg-4.text-center
                img(src=`${CWD}assets/img/icons/Counter_1.png`, alt="").mb-3
                h1.text-warning.fs-4.fs-lg-2.lh-normal.counter-delivared(data-countup!={endValue:9124201, autoIncreasing: true} style="font-variant-numeric: lining-nums proportional-nums;") 0
                p.text-success.fs-7.fs-lg-6.fw-bold.mb-0 Plants Delivered
            .col-12.col-lg-4.text-center
                img(src=`${CWD}assets/img/icons/Counter_2.png`, alt="").mb-3
                h1.text-warning.fs-4.fs-lg-2.lh-normal(data-countup!={endValue:36487} style="font-variant-numeric: lining-nums proportional-nums;")  0
                p.text-success.fs-7.fs-lg-6.fw-bold.mb-0 Happy customers 
            .col-12.col-lg-4.text-center
                img(src=`${CWD}assets/img/icons/Counter_3.png`, alt="").mb-3
                h1.text-warning.fs-4.fs-lg-2.lh-normal(data-countup!={endValue:400, suffix:'+'} style="font-variant-numeric: lining-nums proportional-nums;")   0
                p.text-success.fs-7.fs-lg-6.fw-bold.mb-0 Growing Catalog 


